doctype html
html(lang="ro")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title FavBet
    link(rel="stylesheet" href="style.css")
    script(src="https://pixijs.download/release/pixi.min.js")
    script(src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js")
    script(src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/SplitText.min.js")
  body
    .container

      main.main
        .main__left-side

          .header
            .header__container
              img.header__logo(src="./assets/logo-1x.png" srcset="./assets/logo-1x.png 1x, ./assets/logo-2x.png 2x" alt="FavBet logo")

          .visual
            .visual__background-mobile
            .visual__picture.visual__picture--pharaon
              img(src="./assets/pharaon-1x.png" srcset="./assets/pharaon-1x.png 1x, ./assets/pharaon-2x.png 2x" alt="Pharaon image")
            .visual__picture.visual__picture--coala
              img.visual__picture--coala-image(src="./assets/coala-1x.png" srcset="./assets/coala-1x.png 1x, ./assets/coala-2x.png 2x" alt="Coala image")

        .main__right-side
          .main__info-block
            .main__info-block-header-wrapper
              .info-block-header
                span.info-block-header--bold ORAȘUL
                span.info-block-header--italic  DISTRAȚIEI
            .main__info-block-text
              p.info-block-text
                | BONUS 
                span.info-block-text--highlight 150%
                br
                | PÂNĂ LA 
                span.info-block-text--highlight 2000 LEI
            .main__info-block-secondary
              .info-block-secondary
                p.info-block-secondary-text PARIU FĂRĂ
                p.info-block-secondary-text RISC 250 LEI
              .info-block-secondary-separator
                img(src="./assets/infoBlock__circle-1x.png" srcset="./assets/infoBlock__circle-1x.png 1x, ./assets/infoBlock__circle-2x.png 2x" alt="Plus separator")
              .info-block-secondary
                p.info-block-secondary-text PÂNĂ LA 725 DE
                p.info-block-secondary-text ROTIRI GRATUITE
            .main__info-block-button
              button.info-block-button
                span.info-block-button-border
                span.info-block-button-border
                span.info-block-button-text PLASEAZĂ UN PARIU

      .background
        canvas.background__snow
        img.background__left-lightning(src="./assets/left-light.png" alt="Lightning")
        img.background__right-lightning(src="./assets/right-light.png" alt="Lightning")
        img.background__right-second(src="./assets/right-light.png" alt="Lightning")
        img.background__gradient(src="./assets/gradient-bg.png" alt="Gradient")
        img.background__firework-first(src="./assets/firework1-1x.png" srcset="./assets/firework1-1x.png 1x, ./assets/firework1-2x.png 2x" alt="Firework image")
        img.background__firework-second(src="./assets/firework2-1x.png" srcset="./assets/firework2-1x.png 1x, ./assets/firework2-2x.png 2x" alt="Firework image")
        img.background__firework-third(src="./assets/firework3-1x.png" srcset="./assets/firework3-1x.png 1x, ./assets/firework3-2x.png 2x" alt="Firework image")
        img.background__firework-fourth(src="./assets/firework4-1x.png" srcset="./assets/firework4-1x.png 1x, ./assets/firework4-2x.png 2x" alt="Firework image")
        img.background__pyramids(src="./assets/pyramids-1x.png" srcset="./assets/pyramids-1x.png 1x, ./assets/pyramids-2x.png 2x" alt="Pyramids")
        img.background__people(src="./assets/bg-1x.png" srcset="./assets/bgWithPeople-1x.png 1x, ./assets/bgWithPeople-2x.png 2x" alt="People")

      .disclaimer
        p.disclaimer-text
          | L1200662W001197.
          br
          | Se aplică T&C
        .disclaimer-images
          img.disclaimer-first-img(src="./assets/disclaimer_first-1x.png" srcset="./assets/disclaimer_first-1x.png 1x, ./assets/disclaimer_first-2x.png 2x" alt="Disclaimer")
          img.disclaimer-second-img(src="./assets/disclaimer_second-1x.png" srcset="./assets/disclaimer_second-1x.png 1x, ./assets/disclaimer_second-2x.png 2x" alt="Disclaimer")

    script(src="main.js")
    script(src="gsap-animations.js")

